  ],
  "license": "MIT",
  "homepage": "https://github.com/junwen-k/ui-call#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/junwen-k/ui-call.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/junwen-k/ui-call/issues"
  },
  "main": "./dist/index.js",

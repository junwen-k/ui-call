{
  "name": "@ui-call/preact",
  "description": "Promise-based call store binding for Preact with lightweight hooks and optional first-class @preact/signals support to build imperative UI interactions like confirm dialogs, toasts, modals, and more.",
  "version": "0.1.0",
  "type": "module",
  "keywords": [
    "ui",
    "preact",
    "imperative",
    "callable",
    "hooks",
    "signals",
    "promise",
    "typescript",
    "interaction"
  ],
  "license": "MIT",
  "homepage": "https://github.com/junwen-k/ui-call#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/junwen-k/ui-call.git",
    "directory": "packages/preact"
  },
  "bugs": {
    "url": "https://github.com/junwen-k/ui-call/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./signals": {
      "types": "./dist/signals/index.d.ts",
      "import": "./dist/signals/index.js",
      "require": "./dist/signals/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "turbo watch build",
    "build": "tsup",
    "test": "vitest run"
  },
  "dependencies": {
    "@preact/signals": "^2.8.1",
    "@ui-call/core": "workspace:*"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.3",
    "@testing-library/preact": "^3.2.4",
    "@types/node": "catalog:",
    "@ungap/with-resolvers": "catalog:",
    "@ui-call/typescript-config": "workspace:*",
    "@vitest/coverage-v8": "catalog:",
    "happy-dom": "^20.7.0",
    "tsup": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@preact/signals": "^2.8.1",
    "preact": "^10.0.0"
  },
  "peerDependenciesMeta": {
    "@preact/signals": {
      "optional": true
    }
  }
}

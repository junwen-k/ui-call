{
  "name": "@ui-call/preact",
  "description": "Preact UI call store for managing async, stackable user interactions.",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./signals": {
      "types": "./dist/signals/index.d.ts",
      "import": "./dist/signals/index.js",
      "require": "./dist/signals/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "turbo watch build",
    "build": "tsup",
    "test": "vitest run"
  },
  "dependencies": {
    "@preact/signals": "^2.2.1",
    "@ui-call/core": "workspace:*"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@testing-library/preact": "^3.2.4",
    "@types/node": "catalog:",
    "@ungap/with-resolvers": "catalog:",
    "@ui-call/typescript-config": "workspace:*",
    "@vitest/coverage-v8": "catalog:",
    "happy-dom": "^18.0.1",
    "tsup": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@preact/signals": "^2.2.1",
    "preact": "^10.0.0"
  },
  "peerDependenciesMeta": {
    "@preact/signals": {
      "optional": true
    }
  }
}
